# Environment Configuration Template for SYNAPSE-FI
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG_MODE=true

# =============================================================================
# ENTITY A CONFIGURATION
# =============================================================================
ENTITY_A_ID=entity_a
ENTITY_A_NAME=Bank A
ENTITY_A_PORT=8001
ENTITY_A_HOST=0.0.0.0

# Entity A Risk Scoring Thresholds
ENTITY_A_ALLOW_THRESHOLD=40
ENTITY_A_STEP_UP_THRESHOLD=70
ENTITY_A_BLOCK_THRESHOLD=70

# Entity A Fingerprint Salt (unique per entity for privacy)
ENTITY_A_FINGERPRINT_SALT=change_this_to_random_string_a

# Entity A Transaction Stream
ENTITY_A_TXN_INTERVAL=2.0  # seconds between transactions
ENTITY_A_TXN_SEED=12345     # for deterministic demos

# =============================================================================
# ENTITY B CONFIGURATION
# =============================================================================
ENTITY_B_ID=entity_b
ENTITY_B_NAME=Bank B
ENTITY_B_PORT=8002
ENTITY_B_HOST=0.0.0.0

# Entity B Risk Scoring Thresholds
ENTITY_B_ALLOW_THRESHOLD=40
ENTITY_B_STEP_UP_THRESHOLD=70
ENTITY_B_BLOCK_THRESHOLD=70

# Entity B Fingerprint Salt
ENTITY_B_FINGERPRINT_SALT=change_this_to_random_string_b

# Entity B Transaction Stream
ENTITY_B_TXN_INTERVAL=2.0
ENTITY_B_TXN_SEED=54321

# =============================================================================
# BRIDGE HUB CONFIGURATION
# =============================================================================
HUB_HOST=0.0.0.0
HUB_PORT=8000
HUB_API_BASE_URL=http://localhost:8000

# BRIDGE Correlation Parameters
HUB_TIME_WINDOW_SECONDS=300      # 5 minutes
HUB_ENTITY_THRESHOLD=2           # minimum entities for correlation
HUB_ESCALATION_THRESHOLD=70      # score threshold for escalation

# Graph Pruning
HUB_PRUNE_INTERVAL_SECONDS=60    # how often to clean old edges

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_PORT=3000
DASHBOARD_HOST=0.0.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# API Keys (generate secure random strings for production)
API_KEY_ENTITY_A=dev_key_entity_a_change_in_prod
API_KEY_ENTITY_B=dev_key_entity_b_change_in_prod
API_KEY_HUB=dev_key_hub_change_in_prod

# CORS Settings (adjust for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# MONITORING & TELEMETRY
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# DEMO SETTINGS
# =============================================================================
DEMO_MODE=false
DEMO_FRAUD_PROBABILITY=0.2  # 20% of transactions are suspicious
